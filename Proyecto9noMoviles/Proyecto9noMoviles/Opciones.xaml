<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto9noMoviles.Opciones">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="10" CornerRadius="0">
                <Label x:Name="lblNombreUsuario" HorizontalTextAlignment="Center" TextColor="White" FontSize="25"/>
            </Frame>

            <Grid Margin="10,0,10,0" Padding="10,10,10,10" RowSpacing="5" ColumnSpacing="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="1.0*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>

                </Grid.RowDefinitions>
                <Button Grid.Row="0" Grid.Column="0" Text="Reservar" x:Name="opcionCrear" Clicked="opcionCrear_Clicked"></Button>
                <Button Grid.Row="0" Grid.Column="1" Text="Eliminar Reserva" x:Name="opcionEliminar" Clicked="opcionEliminar_Clicked"></Button>
            </Grid>


        </StackLayout>
        
        
    </ContentPage.Content>
</ContentPage>